<Window
    x:Class="Laboratory.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Laboratory"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="700"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <DataGrid
                Height="200"
                Margin="20"
                AutoGenerateColumns="False"
                HeadersVisibility="Column"
                ItemsSource="{Binding Users}"
                SelectedItem="{Binding SelectedUser}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding LastName}"
                        FontSize="16"
                        Header="Фамилия" />
                    <DataGridTextColumn
                        Binding="{Binding FirstName}"
                        FontSize="16"
                        Header="Имя" />
                    <DataGridTextColumn
                        Binding="{Binding MiddleName}"
                        FontSize="16"
                        Header="Отчество" />
                    <DataGridTextColumn
                        Binding="{Binding Age}"
                        FontSize="16"
                        Header="Возраст" />

                    <DataGridTemplateColumn Header="Дети">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasChildren}" Value="True">
                                                    <Setter Property="Text" Value="✔" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Binding="{Binding Position}" Header="Должность" />
                    <DataGridTextColumn Binding="{Binding Gender}" Header="Пол" />
                    <DataGridTextColumn Binding="{Binding Family}" Header="Семейное положение" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Margin="20">
                <TextBlock FontSize="20" Text="Имя" />
                <TextBox FontSize="20" Text="{Binding FirstName}" />

                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="20"
                    Text="Отчество" />
                <TextBox FontSize="20" Text="{Binding MiddleName}" />

                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="20"
                    Text="Фамилия" />
                <TextBox FontSize="20" Text="{Binding LastName}" />

                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                    <TextBlock FontSize="20" Text="Возраст" />
                    <TextBox
                        Width="50"
                        FontSize="20"
                        Text="{Binding Age}" />
                    <CheckBox
                        Margin="10,0,0,0"
                        Content="Дети"
                        FontSize="20"
                        IsChecked="{Binding HasChildren}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10">
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="20"
                            Text="Должность" />
                        <ComboBox ItemsSource="{Binding Positions}" SelectedItem="{Binding SelectedPosition}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Title}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="20"
                            Text="Семейное положение" />
                        <ComboBox ItemsSource="{Binding Families}" SelectedItem="{Binding SelectedFamily}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Title}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="20"
                            Text="Пол" />
                        <ComboBox ItemsSource="{Binding Genders}" SelectedItem="{Binding SelectedGender}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Title}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Margin="10"
                    Command="{Binding AddUserCommand}"
                    Content="Add User"
                    FontSize="20" />
                <Button
                    Margin="10"
                    Command="{Binding EditUserCommand}"
                    Content="Edit User"
                    FontSize="20" />
                <Button
                    Margin="10"
                    Command="{Binding DeleteUserCommand}"
                    Content="Delete User"
                    FontSize="20" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
